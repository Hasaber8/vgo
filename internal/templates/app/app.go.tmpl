package app

import (
	"context"
	"log"
	"os"
	"time"

	db "{{ returnModName . }}/internal/database"
	"{{ returnModName . }}/internal/handlers"
	"github.com/joho/godotenv"
)

type App struct {
	API_SERVER_PORT            string
	DB_MONGODB_URL             string
	DB_MONDODB_DB_NAME         string
	DB_MONGODB_COLLECTION_NAME string
}

func NewApp() *App {
	return &App{}
}

func (a *App) Init() {
	a.SetupEnv()
	a.SetupServer()
}

func (a *App) SetupEnv() {
	err := godotenv.Load(".env")
	if err != nil {
		log.Fatal(err)
	}

	a.Env = &Env{
		API_SERVER_PORT: os.Getenv("API_SERVER_PORT"),
	}
}

func (a *App) SetupServer() {
    {{ returnDbInstance .Database }}
    h := handlers.New(db)
    h.SetupRoutes()
    if err := h.StartServer(), err != nil {
        fmt.Errorf("Error Starting Server:\nMessage:\n%v", err.Error())
    }
}
